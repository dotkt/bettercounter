<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBackground"
    tools:context=".ui.MainActivity">

    <!-- 顶部区域：工具栏和分类标题 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp">

        <!-- 顶部工具栏：+号、搜索框、导出按钮、三竖点按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/colorLightBackground">

            <!-- 搜索框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@color/colorLightBackground"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:startIconDrawable="@drawable/ic_search"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_counters"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkBackground"
                    android:textColorHint="@android:color/darker_gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 导出按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exportButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="@string/export_csv"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_time"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- 三竖点菜单按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="菜单"
                app:icon="@drawable/ic_menu"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:cornerRadius="24dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- 分类标题 -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@color/colorLightBackground"
            tools:text="默认" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

    <LinearLayout
        android:id="@+id/bottomSheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        android:background="@color/colorDarkBackground"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            
            <TextView
                android:id="@+id/detailsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editCounterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:minWidth="0dp"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="@string/edit_counter"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/charts"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
