<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listSpacing"
    android:background="@color/colorLightBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBackground"
            android:textSize="16sp"
            tools:text="My Counter" />

        <TextView
            android:id="@+id/countText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBackground"
            android:textSize="24sp"
            tools:text="42" />

        <org.kde.bettercounter.ui.BetterRelativeTimeTextView
            android:id="@+id/timestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBackground"
            android:textSize="12sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4.5dip"
            tools:text="2h ago" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus10"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus10"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustom"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="设"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/darker_gray"
            app:cornerRadius="24dp" />
    </LinearLayout>

</LinearLayout>
