<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listSpacing"
    android:background="@color/colorLightBackground"
    android:orientation="vertical">

    <!-- 第一行：多选复选框、计数器标题、按钮 -->
    <LinearLayout
        android:id="@+id/infoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- 多选复选框 -->
        <CheckBox
            android:id="@+id/selectionCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:focusable="false"
            android:clickable="false" />

        <!-- 计数器名称 -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="计数器名称" />

        <!-- 绿色加号按钮：1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="20dp" />

        <!-- 绿色加号按钮：五 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="20dp" />

        <!-- 绿色加号按钮：十 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus10"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="20dp" />

        <!-- 设按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustom"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="设"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:backgroundTint="@android:color/darker_gray"
            app:cornerRadius="20dp" />

        <!-- 统计按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStats"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:minWidth="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="统计"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius="6dp" />
    </LinearLayout>

    <!-- 第二行：上次时间 -->
    <TextView
        android:id="@+id/timestampText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="4.5dip"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        tools:text="上次时间: 2025-05-10 19:30:22" />

</LinearLayout>
