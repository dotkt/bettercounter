<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listSpacing"
    android:background="@color/colorLightBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 计数器名称 -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="计数器名称: aaa" />

        <!-- 状态、实际/目标计数、目标调节区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(完成状态)"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/actualCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际计数"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slashText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <TextView
                android:id="@+id/targetCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标计数"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <!-- 目标调节区 -->
            <Button
                android:id="@+id/btnTargetMinus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginEnd="2dp" />
            <EditText
                android:id="@+id/targetInput"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:inputType="numberSigned"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@android:color/white"
                android:layout_marginEnd="2dp"
                android:hint="设定" />
            <Button
                android:id="@+id/btnTargetPlus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/btnTargetSet"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:text="设"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 上次时间 -->
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4.5dip"
            android:layout_marginTop="4dp"
            tools:text="上次时间: 2025-05-10 19:30:22" />
    </LinearLayout>

    <!-- 统计按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStats"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="统计"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:cornerRadius="6dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus10"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus10"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light"
            app:cornerRadius="24dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustom"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:text="设"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/darker_gray"
            app:cornerRadius="24dp" />
    </LinearLayout>

</LinearLayout>
