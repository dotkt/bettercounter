<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listSpacing"
    android:background="@color/colorLightBackground"
    android:orientation="vertical">

    <!-- 第一行：多选复选框、计数器名称、时间、进度/计数、统计按钮 -->
    <LinearLayout
        android:id="@+id/infoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- 多选复选框 -->
        <CheckBox
            android:id="@+id/selectionCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:focusable="false"
            android:clickable="false" />

        <!-- 计数器名称 -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="计数器名称" />

        <!-- 最后完成时间 -->
        <org.kde.bettercounter.ui.BetterRelativeTimeTextView
            android:id="@+id/relativeTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            tools:text="刚刚" />

        <!-- 完成进度或总计数 -->
        <TextView
            android:id="@+id/counterValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="3/10" />

        <!-- 统计按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStats"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="统计"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius="6dp" />
    </LinearLayout>

    <!-- 第二行：操作按钮 -->
    <LinearLayout
        android:id="@+id/buttonArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <!-- 红色减号按钮：十 -->
        <TextView
            android:id="@+id/btnMinus10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 红色减号按钮：五 -->
        <TextView
            android:id="@+id/btnMinus5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 红色减号按钮：1 -->
        <TextView
            android:id="@+id/btnMinus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="一"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 绿色加号按钮：1 -->
        <TextView
            android:id="@+id/btnPlus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="一"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_green_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 绿色加号按钮：五 -->
        <TextView
            android:id="@+id/btnPlus5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="五"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_green_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 绿色加号按钮：十 -->
        <TextView
            android:id="@+id/btnPlus10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="十"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/holo_green_light"
            android:clickable="true"
            android:focusable="true" />

        <!-- 设按钮 -->
        <TextView
            android:id="@+id/btnCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@android:color/darker_gray"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>
